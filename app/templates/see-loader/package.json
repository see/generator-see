{
  "name": "<%= name %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "main": "src/index.js",
  "keywords": [
    "webpack",
    "webpack-loader",
    "loader",
    "yeoman"
  ],
  "directories": {
    "doc": "docs",
    "example": "samples",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+<%= gitRepo %>.git"
  },
  "homepage": "<%= gitRepo %>",
  "bugs": "<%= gitRepo %>/issues",
  "authors": [
    "<%= author %>"
  ],
  "license": "<%= license %>",
  "scripts": {
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
